<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="60dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- The actual image view for the shared media -->
    <ImageView
        android:id="@+id/image_message_media"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:background="#DDDDDD"
        android:elevation="2dp"
        android:contentDescription="Shared Image" />

    <TextView
        android:id="@+id/image_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_message_media"
        android:layout_alignStart="@id/image_message_media"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textColor="@color/Gray"
        android:text="4:49 PM"/>

</RelativeLayout>
