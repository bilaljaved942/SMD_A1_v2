<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <!-- Top Status Bar Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:tint="@color/black"
            android:src="@drawable/time2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:tint="@color/black"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="73dp"
            android:layout_height="93dp"
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:paddingStart="10dp">

        <TextView
            android:id="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Edit Profile"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@color/Red"
            android:text="Done"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:layout_weight="2.5">

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/person2" />

        <TextView
            android:id="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Photo"
            android:layout_below="@+id/image"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:textSize="14dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp">

        <!-- Name Row -->
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nameLabel"
            android:layout_marginStart="30dp"
            android:layout_alignBaseline="@+id/nameLabel"
            android:hint="Jacob West"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <View
            android:id="@+id/nameUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nameEditText"
            android:layout_toEndOf="@+id/bioLabel"
            android:layout_marginStart="48dp"
            android:background="@color/LightGray" />

        <!-- Username Row -->
        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/nameEditText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/usernameLabel"
            android:layout_alignBaseline="@+id/usernameLabel"
            android:hint="jacob_w"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <View
            android:id="@+id/userUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/usernameEditText"
            android:layout_toEndOf="@+id/bioLabel"
            android:layout_marginStart="48dp"
            android:background="@color/LightGray" />

        <!-- Website Row -->
        <TextView
            android:id="@+id/websiteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/usernameEditText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/websiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/websiteLabel"
            android:layout_alignBaseline="@+id/websiteLabel"
            android:hint="Website"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <View
            android:id="@+id/webUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/websiteEditText"
            android:layout_toEndOf="@+id/bioLabel"
            android:layout_marginStart="48dp"
            android:background="@color/LightGray" />

        <!-- Bio Row -->
        <TextView
            android:id="@+id/bioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/websiteEditText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/bioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bioLabel"
            android:layout_alignBaseline="@+id/bioLabel"
            android:hint="Digital goodies designer "
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="3"
            android:layout_marginStart="48dp"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="8dp" />

        <View
            android:id="@+id/bioUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/bioEditText"
            android:layout_toEndOf="@+id/bioLabel"
            android:layout_marginStart="48dp"
            android:background="@color/LightGray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@id/text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch to Professional Account "
            android:textStyle="bold"
            android:textColor="@color/Red"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/text2_1"
            android:text="Private Information"
            android:textSize="16dp"/>

        <!-- Email Row -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@+id/text2_2"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/emailLabel"
            android:layout_marginStart="30dp"
            android:layout_alignBaseline="@+id/emailLabel"
            android:hint="jacob.west@gmail.com"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <View
            android:id="@+id/emailUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/emailEditText"
            android:layout_toEndOf="@+id/emailLabel"
            android:layout_marginStart="30dp"
            android:background="@color/LightGray" />

        <!-- Phone Row -->
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/emailUnderline"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/phoneLabel"
            android:layout_alignBaseline="@+id/phoneLabel"
            android:hint="+1 202 555 0147"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <View
            android:id="@+id/phoneUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/phoneEditText"
            android:layout_toEndOf="@+id/phoneLabel"
            android:background="@color/LightGray" />

        <!-- Gender Row -->
        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/phoneUnderline"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/genderLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/genderLabel"
            android:layout_alignBaseline="@+id/genderLabel"
            android:hint="Male"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="3"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:paddingTop="0dp"
            android:paddingBottom="8dp" />

        <View
            android:id="@+id/genderUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/genderLabelText"
            android:layout_toEndOf="@+id/genderLabel"
            android:layout_marginStart="20dp"
            android:background="@color/LightGray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:src="@drawable/bar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>