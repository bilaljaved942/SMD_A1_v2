<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/main">
    <!--  START: Feature Implementation for Assignment 2 - Agora Video Containers  -->
    <!--  1. Remote Video Container (Main Background View)  -->
    <FrameLayout android:id="@+id/remote_video_container" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/black"/>
    <!--  2. Local Video Container (Small Inset View)  -->
    <FrameLayout android:id="@+id/local_video_container" android:layout_width="120dp" android:layout_height="160dp" android:layout_gravity="top|end" android:layout_marginTop="50dp" android:layout_marginEnd="10dp" android:background="#22FFFFFF" android:elevation="4dp"/>
    <!--  END: Feature Implementation for Assignment 2  -->
    <!--  Overlay Content (Your Original UI elements placed on top)  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="@android:color/transparent" android:elevation="2dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3" android:gravity="center_vertical" android:paddingStart="20dp"/>
        <!--  Picture and name section  -->
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/squareRoundedImage" android:layout_width="145dp" android:layout_height="140dp" android:layout_centerHorizontal="true" android:layout_gravity="center" android:src="@drawable/person2" android:padding="4dp" android:background="@android:color/transparent"/>
            <TextView android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp" android:text="Mother ❤️" android:layout_marginTop="10dp" android:layout_centerHorizontal="true" android:layout_below="@+id/squareRoundedImage" android:textColor="@color/white" android:textStyle="bold"/>
            <TextView android:id="@+id/text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp" android:text="03:12" android:layout_marginTop="15dp" android:layout_centerHorizontal="true" android:layout_below="@+id/text1" android:textColor="@color/white"/>
        </RelativeLayout>
        <!--  Bottom section  -->
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginBottom="30dp" android:layout_weight="3" android:paddingStart="20dp">
            <ImageView android:id="@+id/volumeImage" android:layout_width="55dp" android:layout_height="40dp" android:src="@drawable/img23" android:layout_marginBottom="20dp" android:layout_alignParentEnd="true" android:layout_alignParentBottom="true" android:layout_marginEnd="60dp" android:scaleType="centerCrop" android:tint="@color/white" android:padding="4dp"/>
            <ImageView android:id="@+id/callEnd" android:layout_width="90dp" android:layout_height="95dp" android:src="@drawable/img25" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:scaleType="centerCrop" android:padding="4dp"/>
            <ImageView android:id="@+id/message" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/img24" android:layout_alignParentStart="true" android:layout_alignParentBottom="true" android:scaleType="centerCrop" android:layout_marginStart="50dp" android:layout_marginBottom="20dp" android:tint="@color/white" android:padding="4dp"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>