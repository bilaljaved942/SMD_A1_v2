<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp">

    <!-- Profile Image (No change) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/person2"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/LightGray"
        android:contentDescription="User Profile Picture" />

    <!-- Name and Last Message Container -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/chat_user_profile_image"
        android:layout_toStartOf="@+id/chat_camera_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="joshua_I"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <!-- RESTORED: This TextView is now for the last message. -->
        <TextView
            android:id="@+id/chat_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a conversation!"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- Camera Icon (No change) -->
    <ImageView
        android:id="@+id/chat_camera_icon"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/Red"
        android:src="@drawable/camera" />

</RelativeLayout>

