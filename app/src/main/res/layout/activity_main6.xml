<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/off_white"
    android:id="@+id/main">

    <!-- FIXED TOP SECTION - Status Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/timeIcon1"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:tint="@color/black"
            android:src="@drawable/time2"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/black"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

    <!-- FIXED TOP SECTION - Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchInput3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search"
            android:paddingStart="40dp"
            android:paddingEnd="20dp"
            android:background="@drawable/form_input2"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/Red"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/searchIcon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img9"
            android:tint="@color/Red"
            android:layout_alignTop="@id/searchInput3"
            android:layout_alignBottom="@id/searchInput3"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/filterIcon3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/act6_1"
            android:tint="@color/Red"
            android:layout_alignTop="@id/searchInput3"
            android:layout_alignBottom="@id/searchInput3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!-- BEST SOLUTION: Using TextView with drawableStart for first box -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingTop="16dp"
        android:paddingStart="5dp">

        <!-- Box 1: Manual icon + text control -->
        <RelativeLayout
            android:id="@+id/box1Container"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/form_input3"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/shopIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/act6_2"
                android:tint="@color/Red"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="@color/Red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/shopIcon"
                android:layout_marginStart="3dp"/>

        </RelativeLayout>

        <!-- Remaining boxes same as above... -->
        <TextView
            android:id="@+id/box2Manual2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/form_input3"
            android:text="Style"
            android:textColor="@color/Red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/box1Container"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/box2Manual3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/form_input3"
            android:text="Sports"
            android:textColor="@color/Red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/box2Manual2"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/box2Manual4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/form_input3"
            android:text="Auto"
            android:textColor="@color/Red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/box2Manual3"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/box2Manual5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/form_input3"
            android:text="Music"
            android:textColor="@color/Red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/box2Manual4"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/off_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginEnd="1dp"
                        android:src="@drawable/act6_img1"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:layout_marginEnd="1dp"
                        android:src="@drawable/act6_img2"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img3"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img4"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img4_2"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img5"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img6"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img7"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/act6_img8"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/act6_img9"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_weight="0.4"
                    android:src="@drawable/act6_img10"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <!-- FIXED BOTTOM SECTION - Navigation -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/img14"
            android:layout_below="@id/line"
            android:tint="@color/Red"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/homeIcon2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_below="@id/line"
            android:layout_marginStart="45dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/homeIcon"
            android:src="@drawable/img13"
            android:tint="@color/Red" />

        <ImageView
            android:id="@+id/homeIcon3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/img10"
            android:tint="@color/Red"
            android:layout_toEndOf="@id/homeIcon2"
            android:layout_below="@id/line"
            android:layout_marginTop="21dp"
            android:layout_marginStart="43dp"/>

        <ImageView
            android:id="@+id/homeIcon4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img5"
            android:layout_toEndOf="@id/homeIcon3"
            android:tint="@color/Red"
            android:layout_below="@id/line"
            android:layout_marginTop="18dp"
            android:layout_marginStart="42dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/line"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/homeIcon4"
            android:src="@drawable/person2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:src="@drawable/bar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>