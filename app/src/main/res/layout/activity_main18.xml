<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/main">

    <!-- Top Status Bar Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/time2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:alpha="0.7"
            android:src="@drawable/bird" />

        <View
            android:id="@+id/line1"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <View
            android:id="@+id/line2"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/line3"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:background="@color/white"/>

        <View
            android:id="@+id/line3"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/line1"
            android:background="@color/white"/>

        <View
            android:id="@+id/line4"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/line3"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line5"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_toRightOf="@+id/line4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line6"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/line5"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/line1"
            android:layout_marginStart="10dp"
            android:src="@drawable/person3"
            android:padding="4dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="craig_love"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:layout_below="@+id/line1"
            android:layout_toRightOf="@id/circle1"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4h"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/LightGray"
            android:layout_below="@+id/line1"
            android:layout_toRightOf="@id/text1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line2"
            android:tint="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img15"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/round_rect">

            <!-- Camera with gray circle background -->
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/img16"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:tint="@color/Red"
                android:padding="6dp"/>

            <!-- Send Message text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Send Message"
                android:textColor="@color/Red"
                android:textSize="16sp"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/icon1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:tint="@color/Red"
            android:src="@drawable/img35"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/icon6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/Red"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="1dp"
            android:layout_toLeftOf="@+id/icon1"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:src="@drawable/bar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>