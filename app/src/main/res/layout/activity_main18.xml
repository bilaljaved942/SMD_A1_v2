<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/time2"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cam"
            android:tint="@color/white"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/story_full_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bird"
            android:contentDescription="Story Media"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:id="@+id/story_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentTop="true">

            <View android:layout_width="0dp" android:layout_height="3dp" android:layout_weight="1" android:background="@color/white" android:layout_marginEnd="4dp"/>
            <View android:layout_width="0dp" android:layout_height="3dp" android:layout_weight="1" android:background="@color/white" android:layout_marginEnd="4dp"/>
            <View android:layout_width="0dp" android:layout_height="3dp" android:layout_weight="1" android:background="@color/white" android:layout_marginEnd="4dp"/>
            <View android:layout_width="0dp" android:layout_height="3dp" android:layout_weight="1" android:background="@color/white" android:layout_marginEnd="4dp"/>
            <View android:layout_width="0dp" android:layout_height="3dp" android:layout_weight="1" android:background="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/story_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/story_progress_container"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/person3"
                android:padding="2dp"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="craig_love"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4h"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/story_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:tint="@color/white"
                android:src="@drawable/img15"
                android:contentDescription="Close Story"
                android:padding="5dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/round_rect">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/img16"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:tint="@color/Red"
                android:padding="6dp"
                android:contentDescription="Camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Send Message"
                android:textColor="@color/Red"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:tint="@color/Red"
            android:src="@drawable/img35"
            android:contentDescription="Like"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/icon6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/Red"
            android:layout_marginTop="21dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/search"
            android:src="@drawable/img1"
            android:contentDescription="Send" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:src="@drawable/bar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:contentDescription="Indicator"
            />

    </RelativeLayout>

</LinearLayout>