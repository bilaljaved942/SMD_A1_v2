<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <!-- Top Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/LiG"
        android:gravity="center_vertical"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/black"
            android:src="@drawable/time2"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:tint="@color/black"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="73dp"
            android:layout_height="83dp"
            android:tint="@color/black"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/wifi" />


    </RelativeLayout>

<!--    Search section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/LiG"
        android:gravity="center_vertical"
        android:paddingStart="20dp">

        <RelativeLayout
            android:id="@+id/searchContainer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/clearText"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/searchInput3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="internshala"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/form_input4"
                android:inputType="text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/LightBlack"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/searchIcon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img9"
                android:tint="@color/LightBlack"
                android:layout_alignTop="@id/searchInput3"
                android:layout_alignBottom="@id/searchInput3"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"/>

            <!-- Battery/WiFi Icon (Right side of search bar) -->
            <ImageView
                android:id="@+id/crossIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/img15" />

        </RelativeLayout>

        <TextView
            android:id="@+id/clearText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="Clear"
            android:textColor="@color/Red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/LiG"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Top"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/line"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Accounts"
            android:layout_toRightOf="@+id/text1"
            android:textSize="18dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Tags"
            android:textSize="18dp"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@+id/text2"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Places"
            android:textSize="18dp"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@+id/text3"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

    </RelativeLayout>

<!--    name section-->
