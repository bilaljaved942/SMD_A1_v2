<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <!-- Top Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:tint="@color/black"
            android:src="@drawable/time2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:tint="@color/black"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="73dp"
            android:layout_height="93dp"
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

<!--    Name section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_marginTop="9dp"
            android:tint="@color/Red"
            android:layout_marginEnd="3dp"
            android:layout_toLeftOf="@+id/text1"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Red"
            android:text="jacob_w"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="27dp"
            android:layout_marginTop="9dp"
            android:layout_height="27dp"
            android:layout_toEndOf="@+id/text1"
            android:tint="@color/Red"
            android:src="@drawable/img17" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="35dp"
            android:layout_marginEnd="16dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:tint="@color/Red"
            android:src="@drawable/menu" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:paddingStart="10dp">

        <!-- Gradient Border Container -->
        <FrameLayout
            android:id="@+id/img1"
            android:layout_width="86dp"
            android:layout_marginTop="5dp"
            android:layout_height="86dp"
            android:background="@drawable/create_grad2">

            <!-- White circle background for spacing -->
            <FrameLayout
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:src="@drawable/person" />

            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="52dp"
            android:layout_toRightOf="@+id/img1"
            android:textColor="@color/black"
            android:text="54"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="55dp"
            android:layout_toRightOf="@+id/text1"
            android:textColor="@color/black"
            android:text="834"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="62dp"
            android:layout_toRightOf="@+id/text2"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="162"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="40dp"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@+id/img1"
            android:textColor="@color/black"
            android:text="Posts"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@+id/text4"
            android:textColor="@color/black"
            android:text="Followers"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@+id/text5"
            android:textColor="@color/black"
            android:text="Following"/>

    </RelativeLayout>

<!--    Intro section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="Jacob West"/>

        <TextView
            android:id="@+id/text2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/text2_1"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="Digital goodies designer"/>

        <TextView
            android:id="@+id/text2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/text2_1"
            android:layout_toRightOf="@+id/text2_2"
            android:layout_marginStart="5dp"
            android:textColor="@color/Blue"
            android:text="@pixsellz"/>

        <TextView
            android:id="@+id/text2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/text2_2"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="Everything is designed."/>

        <TextView
            android:id="@+id/text2_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/text2_4"
            android:background="@drawable/form_input3"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/Red"
            android:text="Edit Profile"/>

    </RelativeLayout>

<!--    stories section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3">

        <TextView
            android:id="@+id/text3_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:background="@drawable/circle3"
            android:layout_alignParentStart="true"/>

        <!-- Gradient Border Container -->
        <FrameLayout
            android:id="@+id/img3_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text3_1"
            android:background="@drawable/create_grad2">

            <!-- White circle background for spacing -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@drawable/friends" />

            </FrameLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/img3_2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img3_1"
            android:background="@drawable/create_grad2">

            <!-- White circle background for spacing -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sports" />

            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/img3_3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img3_2"
            android:background="@drawable/create_grad2">

            <!-- White circle background for spacing -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@drawable/design" />

            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/text3_2"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:text="New"
            android:textSize="18dp"
            android:layout_below="@id/text3_1"
            android:textColor="@color/Red"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text3_3"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_marginStart="3dp"
            android:text="Friends"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/text3_2"
            android:layout_below="@id/text3_1"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/text3_4"
            android:layout_width="68dp"
            android:layout_height="65dp"
            android:layout_marginStart="6dp"
            android:text="Sport"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/text3_3"
            android:layout_below="@id/text3_1"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/text3_5"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:text="Design"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/text3_4"
            android:layout_below="@id/text3_1"
            android:textColor="@color/Red"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text3_2"
            android:background="@color/LightGray"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image4_1"
            android:layout_width="35dp"
            android:layout_marginStart="80dp"
            android:layout_height="35dp"
            android:src="@drawable/grid" />

        <ImageView
            android:id="@+id/image4_2"
            android:layout_width="35dp"
            android:layout_marginEnd="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/img27" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/image4_1"
            android:background="@color/Red"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/img14"
            android:layout_below="@id/line"
            android:tint="@color/Red"
            android:layout_marginTop="14dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/homeIcon2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_below="@id/line"
            android:layout_marginStart="49dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/homeIcon"
            android:src="@drawable/img9"
            android:tint="@color/Red" />

        <ImageView
            android:id="@+id/homeIcon3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/img10"
            android:tint="@color/Red"
            android:layout_toEndOf="@id/homeIcon2"
            android:layout_below="@id/line"
            android:layout_marginTop="16dp"
            android:layout_marginStart="47dp"/>

        <ImageView
            android:id="@+id/homeIcon4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img5"
            android:layout_toLeftOf="@+id/profileImage3"
            android:tint="@color/Red"
            android:layout_below="@id/line"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="46dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage3"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_below="@id/line"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/person2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:src="@drawable/bar"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>