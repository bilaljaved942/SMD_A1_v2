<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/main">

    <!-- Top Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/time2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/camIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cam"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/wifi" />

    </RelativeLayout>

<!--    Main mid section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:alpha="0.7"
            android:src="@drawable/bird" />

        <View
            android:id="@+id/line1"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <View
            android:id="@+id/line3"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/line2"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line4"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/line3"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line5"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/line4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line6"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/line5"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <View
            android:id="@+id/line2"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/LightGray"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/line2"
            android:layout_marginStart="10dp"
            android:src="@drawable/person3"
            android:padding="4dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hightlight"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/line2"
            android:layout_toRightOf="@id/circle1"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decemeber 3, 2023"
            android:layout_marginStart="8dp"
            android:textColor="@color/LightGray"
            android:layout_below="@+id/line2"
            android:layout_toRightOf="@id/text1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line2"
            android:tint="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img15"/>

        <ImageView
            android:id="@id/bgImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img29"
            android:layout_marginStart="3dp"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@+id/circle1"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist ."
            android:layout_marginStart="2dp"
            android:textColor="@color/white"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@id/bgImage"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:layout_marginStart="5dp"
            android:textColor="@color/LiG"
            android:layout_below="@+id/text1"
            android:layout_toRightOf="@id/text3"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/img28"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@+id/text4"
            android:tint="@color/white"/>

    </RelativeLayout>

<!--    Bottom section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/img30"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:tint="@color/Red"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/img31"
            android:tint="@color/Red"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:layout_toLeftOf="@id/icon3"/>

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/img32"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:tint="@color/Red"
            android:layout_toLeftOf="@+id/icon4"/>

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:tint="@color/Red"
            android:layout_toLeftOf="@+id/icon5"
            android:src="@drawable/img33"/>

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:tint="@color/Red"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:layout_toLeftOf="@+id/icon6"
            android:src="@drawable/img34" />

        <ImageView
            android:id="@+id/icon6"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:tint="@color/Red"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/img35"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/icon1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/icon1"
            android:layout_toLeftOf="@+id/text3"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Post"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/text4"
            android:layout_below="@+id/icon1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:textSize="12sp"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@+id/text5"
            android:layout_below="@+id/icon1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="12sp"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@+id/text6"
            android:layout_below="@+id/icon1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/icon1"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>