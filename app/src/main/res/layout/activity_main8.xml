<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main">

    <!-- Top Section (0.8 weight) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:paddingStart="20dp">
        <!-- Time, Cam, Battery Icons -->
        <ImageView android:id="@+id/timeIcon" android:layout_width="30dp" android:layout_height="30dp" android:tint="@color/black" android:src="@drawable/time2" android:layout_centerVertical="true" android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/camIcon" android:layout_width="15dp" android:layout_height="15dp" android:tint="@color/black" android:src="@drawable/cam" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/batteryIcon" android:layout_width="73dp" android:layout_height="83dp" android:tint="@color/black" android:layout_centerVertical="true" android:layout_alignParentEnd="true" android:src="@drawable/wifi" />
    </RelativeLayout>

    <!-- Name Section (Header, 1.0 weight) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="10dp">
        <ImageView android:id="@+id/image1" android:layout_width="27dp" android:layout_height="22dp" android:tint="@color/Red" android:src="@drawable/back" />
        <TextView android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18sp" android:textStyle="bold" android:layout_centerHorizontal="true" android:textColor="@color/Red" android:text="jacob_w"/>
        <ImageView android:id="@+id/image2" android:layout_width="27dp" android:layout_height="27dp" android:layout_toEndOf="@+id/text1" android:tint="@color/Red" android:src="@drawable/img17" />
        <ImageView android:id="@+id/image3" android:layout_width="27dp" android:layout_marginEnd="16dp" android:layout_height="22dp" android:layout_alignParentEnd="true" android:tint="@color/Red" android:src="@drawable/img18" />
    </RelativeLayout>

    <!-- Search Section (1.0 weight) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="14dp"
        android:paddingStart="20dp">
        <EditText android:id="@+id/searchInput3" android:layout_width="match_parent" android:layout_height="40dp" android:hint="Search" android:paddingStart="40dp" android:paddingEnd="40dp" android:background="@drawable/form_input4" android:inputType="text" android:textStyle="bold" android:textColor="@color/Gray" android:textColorHint="@color/Gray" android:textSize="18sp"/>
        <ImageView android:id="@+id/searchIcon3" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/img9" android:tint="@color/Gray" android:layout_alignTop="@id/searchInput3" android:layout_alignBottom="@id/searchInput3" android:layout_marginStart="12dp" android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- DYNAMIC CHAT LIST AREA (CRITICAL CHANGE) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbars="vertical" />

    <!-- Bottom section (5.0 weight) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:paddingTop="16dp"
        android:paddingStart="20dp">
        <ImageView android:id="@+id/camera1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/Red" android:layout_marginStart="18dp" android:layout_above="@+id/imageView" android:layout_marginBottom="20dp" android:layout_alignStart="@+id/imageView" android:src="@drawable/img16"/>
        <TextView android:id="@+id/cameraText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textStyle="bold" android:layout_marginStart="10dp" android:layout_marginBottom="25dp" android:layout_above="@+id/imageView" android:layout_toEndOf="@+id/camera1" android:text="Camera"/>
        <ImageView android:id="@+id/imageView" android:layout_width="150dp" android:layout_height="10dp" android:src="@drawable/bar" android:layout_alignParentBottom="true" android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>
